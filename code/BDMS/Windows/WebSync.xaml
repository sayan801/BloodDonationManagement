            </TabItem>
            <TabItem Header="View Donors" Name="tabItem3">
                <WebBrowser Name="viewDonorWb" Loaded="viewDonorWb_Loaded"/>
            </TabItem>
            <TabItem Header="Register Patient" Name="tabItem2">
